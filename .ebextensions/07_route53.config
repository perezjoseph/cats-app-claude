Resources:
  DomainName:
    Type: AWS::Route53::RecordSetGroup
    Properties:
      HostedZoneName: people.aws.dev.
      Comment: Zone apex alias targeted to CloudFront distribution
      RecordSets:
        - Name: jpilier.people.aws.dev.
          Type: A
          AliasTarget:
            HostedZoneId: Z2FDTNDATAQYW2  # This is the fixed Route 53 hosted zone ID for CloudFront distributions
            DNSName: { "Fn::GetAtt": ["CloudFrontDistribution", "DomainName"] }